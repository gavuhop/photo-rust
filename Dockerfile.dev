# Development Dockerfile for Rust media processing service
FROM rust:1.88-slim-bullseye

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libclang-dev \
    clang \
    cmake \
    build-essential \
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libavfilter-dev \
    libswscale-dev \
    libswresample-dev \
    libavdevice-dev \
    libpostproc-dev \
    imagemagick \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reloading
RUN cargo install cargo-watch

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Set working directory
WORKDIR /app

# Copy Cargo files to correct locations
COPY Cargo.toml Cargo.lock ./

# Create source directories
RUN mkdir -p src

# Copy source code
COPY src src/

# Copy run script
COPY run_rust.sh ./
RUN chmod +x run_rust.sh

# Create necessary directories
RUN mkdir -p tmp/{media,processing,uploads} logs/rust

# Set ownership
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose ports
EXPOSE 8081 9000

# Set environment variables
ENV RUST_PORT=8081
ENV RUST_LOG=debug
ENV RUST_BACKTRACE=1
ENV PORT=8081

# Default command for development with hot reload
CMD ["cargo", "watch", "-x", "run"] 